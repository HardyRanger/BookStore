@model Author

@{
    ViewData["Title"] = "Delete Author";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Delete confirmation for @Model.FullName</h1>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" src="@Model.ProfilePictureURL" />
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePictureURL" class="control-label">Profile Picture URL</label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label">Bio</label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger mx-2" />
                        <a class="btn btn-outline-secondary mx-2" asp-action="Index">Show All</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#ProfilePicturePreview").attr("src", $("#ProfilePictureURL").val());
        });
    </script>
}
