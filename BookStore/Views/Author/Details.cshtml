@model Author

@{
    ViewData["Title"] = "Details of the Author";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Details for @Model.FullName</h1>

        <div class="form-group text-center">
            <img class="border-info rounded-circle" style="max-width: 150px" src="@Model.ProfilePictureURL" />
        </div>

        <div class="form-group">
            <label asp-for="FullName" class="control-label">Full Name</label>
            <input asp-for="FullName" class="form-control" readonly />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Bio" class="control-label">Bio</label>
            <input asp-for="Bio" class="form-control" readonly />
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="form-group text-center mt-3">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a class="btn btn-outline-success mx-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-outline-secondary mx-2" asp-action="Index">Show All</a>
            }
        </div>
    </div>
</div>
