@model Author

@{
    ViewData["Title"] = "Update Author";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" src="@Model.ProfilePictureURL" />
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label asp-for="ProfilePictureURL" class="control-label">Profile Picture URL</label>
                        <input asp-for="ProfilePictureURL" class="form-control" />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label asp-for="FullName" class="control-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 20px;">
                        <label asp-for="Bio" class="control-label">Bio</label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success float-right">Update</button>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#ProfilePicturePreview").attr("src", $("#ProfilePictureURL").val());
        });

        $("#ProfilePictureURL").on("change", function () {
            $("#ProfilePicturePreview").attr("src", $(this).val());
        });
    </script>
}
